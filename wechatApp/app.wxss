/**app.wxss**/
@import "utils/weui.wxss";

page{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.container{
  display: flex;
  /* 纵向排列 */
  flex-direction: column;
  /* 每项居中 */
  align-items: center;
  /* 两端居中 */
  justify-content: space-around;
  box-sizing: border-box;
  font-family: '微软雅黑';
}
.page-body{
  display: flex;
  flex-direction: column;
  flex: 1;
}
/* 按钮效果 */
button {
  color: rgb(230, 228, 228);
  background: rgb(83, 135, 186);
  border: 1px solid #649ac7;
  font-size: 14px;
  margin-top: 50rpx;
}
/* 点击按钮效果 */
button:active{
  color: #649ac7;
  background: rgb(16, 19, 23);
  border: 1px solid #649ac7;
}
/* 按钮发光 */
.plan {
  animation: aa 1s infinite alternate;
}
/* 按钮发光效果 */
@keyframes aa{
  from{
    box-shadow: 0 0 0px #649ac7;
  }
  to{
    box-shadow: 0 0 60rpx #649ac7;
  }
}